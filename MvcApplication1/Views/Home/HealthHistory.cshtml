                                                </div>
                                                <div class="input-field col s12">

                                                    <input id="icon_prefix" type="text" class="validate" name="name" value="@Model.Name" maxlength="50">
                                                    <label for="icon_prefix">First Name</label>
                                                </div>
                                                <input type="submit" id="loginBtn" class="btn waves-effect waves-light right" value="Login" />
                                                @*<a class="btn waves-effect waves-light right" type="submit">Login</a>*@
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <div id="test2" class="col s12 signup-screen">
                                <div class="card">
                                    <div class="card-content">
                                        @*<form class="col s12">*@
                                        <form class="col s12" onsubmit="$('#createDPBtn').prop('disabled', true);" method="post" role="form" action="/account/register" id="registerForm">
