                                                <div class="input-field col s12">

                                                    <input id="icon_prefix" type="text" class="validate" value="@Model.Name" name="name" maxlength="50">
                                                    <label for="icon_prefix">Name</label>
                                                </div>
                                                <div class="input-field col s12">

                                                    <input id="icon_telephone" type="tel" class="validate _digitsOnly" value="@Model.Uid" name="uid" maxlength="12">
                                                    <label for="icon_telephone">Aadhar No</label>
                                                </div>
                                                <div class="input-field col s12">

                                                    <input id="icon_telephone" type="tel" class="validate _digitsOnly" name="mobile" maxlength="10">
                                                    <label for="icon_telephone">Mobile</label>
                                                </div>
                                                <div class="input-field col s6">

                                                    <input id="icon_age" type="tel" class="validate _digitsOnly" name="age" maxlength="3">
                                                    <label for="icon_age">Age</label>
                                                </div>
                                                <div class="input-field col s6">
                                                    <p class="left">
                                                        @*<input type="radio" value="@Model.Gender" />*@
                                                        <input name="group1" type="radio" value="@Model.Gender" />
                                                        <label for="test1">Male</label>
                                                    </p>
                                                    <p class="left">
                                                        @*<input type="radio" value="@Model.Gender" />*@
