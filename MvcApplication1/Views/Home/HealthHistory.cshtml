                            <div id="test1" class="col s12 login-screen">
                                <div class="card">
                                    <div class="card-content">
                                        @*<form class="col s12" >*@
                                        <form class="col s12" method="post" role="form" action="/account/authenticate" id="loginForm">
                                            <div class="row">
                                                <div class="input-field col s12">

                                                    <input id="icon_telephone" type="tel" class="validate _digitsOnly" name="uid" value="@Model.Uid" maxlength="12">
